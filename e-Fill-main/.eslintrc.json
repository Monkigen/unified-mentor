{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "no-unused-vars": ["warn"],
        "arrow-spacing": ["error", { "before": true, "after": true }],
        "block-spacing": "error",
        "camelcase": "error",
        "comma-dangle": ["error", "never"],
        "eqeqeq": ["error", "always"],
        "no-var": "error",
        "prefer-const": "error"
    }
}
